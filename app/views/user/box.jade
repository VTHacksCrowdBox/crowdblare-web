extend ../layout
block content
	h1 #{data.locationName}
	
	h3 Owner: #{data.owner}
	h3	Twilio: #{data.twilioNumber}
	h3	Serial: #{data.serial}
	button.btn.btn-default(name='playlistSwitch') Switch Playlist
	
	table.table.table-striped
		thead
			tr
				th Title
				th Reputation
				th Youtube
				th Options
		tbody
			if data.songs.length > 0
				for song in data.songs
					tr
						td song.id
						td song.votes
						td 
						td 
						td: a(target="_blank",href='song.url') View
						td 
							button.btn.btn-default(name='upvote') Up
							button.btn.btn-default(name='downvote') Down
							button.btn.btn-default(name='remove') Remove
			else 
				tr
					td(colspan='4', align='center'): i No songs in playlist
			tr
				td(colspan='4', align='center')
					form.form-inline(name='songQuery', method='post', action='#', role='form')
						.form-group

							input.form-control(type="text", name='songQuery', placeholder="Song Title")
							button.btn.btn-default(name='songQuery', type='submit') Add
	input#edisonId(type='hidden', value='#{data.edisonId}')
block localJS
	script(type="text/javascript", src='/js/user/box.js')