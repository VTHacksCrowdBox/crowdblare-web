html(lang='en')
	head
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(name='description', content='')
		meta(name='author', content="")

		link(rel='stylesheet', type='text/css', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
		
		link(rel='stylesheet', type='text/css', href='/css/main.css')
		
		title CrowdBox | #{title}
		
		block localCSS
			
	body
		//- Navbar
		
		nav.nabar.navbar-default
			.container-fluid
				//- Brand and toggle for mobile display
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#nav-list')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') CrowdBox
				
				//- The navbar items
				.collapse.navbar-collapse.navbar-right#nav-list
					ul.nav.navbar-nav
						li
							a(href='/search') Search
						li
							a(href='/signin') Sign in
						li
							a(href='/signup') Sign up
						
						//- User only : TODO
						li
							a(href='/user/box') Your CrowdBox
						li
							a(href='/user/playlist') Edit Playlist

		
		.container
			block content
				
		.footer
		
		//- Javascript
		script(type="text/javascript", src='/bower_components/jquery/dist/jquery.min.js')
		script(type="text/javascript", src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
		
		script(type="text/javascript", src='/js/main.js')
		
		block localJS
	